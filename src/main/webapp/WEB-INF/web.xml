<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <display-name>Pharmacy</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/WEB-INF/jsp/error.jsp</location>
  </error-page>

  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>by.online.pharmacy.controller.FrontController</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/frontController</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ImageController</servlet-name>
    <servlet-class>by.online.pharmacy.controller.ImageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ImageController</servlet-name>
    <url-pattern>/ImageServlet</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>SaveProductController</servlet-name>
    <servlet-class>by.online.pharmacy.controller.SaveProductServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SaveProductController</servlet-name>
    <url-pattern>/saveProduct</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>Saveproduct</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin/saveproduct.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Saveproduct</servlet-name>
    <url-pattern>/admin/saveproduct</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>UpdateProductPage</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin/updateProduct.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdateProductPage</servlet-name>
    <url-pattern>/admin/update_product</url-pattern>
  </servlet-mapping>



  <servlet>
    <servlet-name>UpdateProductServlet</servlet-name>
    <servlet-class>by.online.pharmacy.controller.UpdateProductServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdateProductServlet</servlet-name>
    <url-pattern>/updateProduct</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>AddNewproductItems</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin/addProductItems.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddNewproductItems</servlet-name>
    <url-pattern>/admin/addItems</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>ProductSetting</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin/productSetting.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>ProductSetting</servlet-name>
    <url-pattern>/admin/product_setting</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>Customers</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin/customers.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Customers</servlet-name>
    <url-pattern>/admin/customers</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Admin</servlet-name>
    <jsp-file>/WEB-INF/jsp/admin.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Admin</servlet-name>
    <url-pattern>/admin_autho</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Error</servlet-name>
    <jsp-file>/WEB-INF/jsp/error.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Error</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Customer</servlet-name>
    <jsp-file>/WEB-INF/jsp/customer.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>Customer</servlet-name>
    <url-pattern>/customer_autho</url-pattern>
  </servlet-mapping>


  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>by.online.pharmacy.filter.EncodingFilter</filter-class>


    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>







</web-app>
